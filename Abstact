 * DESCRIPTION : Program to create an abstract class named Shape
 * AUTHOR      : Melissa Manoj Thondoli
 * VERSION     : 1
 * DATE        : 07/02/22
 **********************************/

package OOPJ;

abstract class Shape{
	abstract void noOfSides();
}

class Rectangle extends Shape{
	void noOfSides() {
		System.out.println("The number of sides of a rectangle = 4");
	}
}

class Triangle extends Shape{
	void noOfSides() {
		System.out.println("The number of sides of a triangle = 3");
	}
}

class Hexagon extends Shape{
	void noOfSides() {
		System.out.println("The number of sides of a hexagon = 6");
	}
}

public class Experiment_7 {
	public static void main(String[] args) {
		
		Rectangle rectangle = new Rectangle();
		rectangle.noOfSides();
		
		Triangle triangle = new Triangle();
		triangle.noOfSides();
		
		Hexagon hexagon = new Hexagon();
		hexagon.noOfSides();
	}
}
